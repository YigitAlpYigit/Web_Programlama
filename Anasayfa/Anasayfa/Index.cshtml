@model HayvanSahiplendirmeSitesi.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>SATINALMASAHİPLEN</title>
</head>
<style>
    .kategoriler {
        border-top: 5px solid ghostwhite;
        text-align: center;
        background-color: #222222;
        color: ghostwhite;
        border-bottom-right-radius: 100px;
    }
}
</style>
<body style="background-color:papayawhip">
    <br /><br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/web/images/arkaplanlar/banner_1.jpg" style="width:100%">
            </div>

            <div class="item">
                <img src="~/web/images/arkaplanlar/banner_2.png" style="width:100%">
            </div>

            <div class="item">
                <img src="~/web/images/arkaplanlar/banner_3.png" style="width:100%">
            </div>

            <div class="item">
                <img src="~/web/images/arkaplanlar/banner_4.jpg" style="width:100%">
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container">
        @foreach (var item in Model.Kategori)
        {

            <div class=" col-xs-12 col-sm-12 col-lg-12">
                <h1 class="kategoriler" id="@item.KATEGORIID">@item.KATEGORIAD</h1>
                <br />
            </div>

            foreach (var item2 in Model.Hayvan)
            {
                if (item.KATEGORIAD == item2.TBLKATEGORILER.KATEGORIAD)
                {
                    <div class="col-xs-12 col-sm-6 com-md-4 col-lg-3" style="text-align:center">
                        <div class="thumbnail" style="background-color:ghostwhite">
                            <p id="@item2.HAYVANID"><img src="@item2.HAYVANRESIM_1" style="width: 244px;height:244px;"></p>
                            <div class="caption" style="background-color:white">
                                <p style="color:darkblue"><b>@item2.HAYVANAD</b></p>
                                <hr>
                                <p style="color:black"><b>@item2.HAYVANCINSIYET &emsp; @item2.HAYVANCINS</b></p>
                                <button class="btn btn-success" style="font-size:20px" data-toggle="modal" data-target="#B_@item2.HAYVANID"><b>@HayvanSahiplendirmeSitesi.Resources.HomeText.Sahiplen</b></button>
                            </div>
                        </div>
                        <p></p>
                    </div>
                }
            }
        }
    </div>

    @foreach (var urn2 in Model.Hayvan)
    {
        <div class="modal" id="B_@urn2.HAYVANID">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div style="text-align:right;">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">X</button>
                        </div>
                        <h3 class="modal-title" style="text-align:center;color:#7f4197;"><b>@HayvanSahiplendirmeSitesi.Resources.HomeText.HayvanHakkında</b> </h3>
                    </div>
                    <br />
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6" style="text-align:center">
                                <div id="C_@urn2.HAYVANID" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner" style="text-align:center">
                                        @if (urn2.HAYVANRESIM_1 != null)
                                        {
                                            <div class="item active">
                                                <img src="@urn2.HAYVANRESIM_1" style="height:270px;width:270px" />
                                            </div>
                                        }
                                        @if (urn2.HAYVANRESIM_2 != null)
                                        {
                                            <div class="item">
                                                <img src="@urn2.HAYVANRESIM_2" style="height:270px;width:270px" />
                                            </div>
                                        }
                                        @if (urn2.HAYVANRESIM_3 != null)
                                        {
                                            <div class="item ">
                                                <img src="@urn2.HAYVANRESIM_3" style="height:270px;width:270px" />
                                            </div>
                                        }
                                        @if (urn2.HAYVANRESIM_4 != null)
                                        {
                                            <div class="item">
                                                <img src="@urn2.HAYVANRESIM_4" style="height:270px;width:270px" />
                                            </div>
                                        }
                                        @if (urn2.HAYVANRESIM_5 != null)
                                        {
                                            <div class="item">
                                                <img src="@urn2.HAYVANRESIM_5" style="height:270px;width:270px" />
                                            </div>
                                        }
                                    </div>
                                    <a class="left carousel-control" href="#C_@urn2.HAYVANID" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#C_@urn2.HAYVANID" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <br />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6" style="text-align:center">
                                <h3 name="UrunAd" style="text-align:center;color:#222222"><b>@urn2.HAYVANAD</b></h3>
                                <hr />
                                <h4 style="color:blueviolet;"><b>@urn2.HAYVANCINSIYET &emsp; @urn2.HAYVANCINS</b></h4>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6" style="text-align:center">
                                <h4 style="color:cornflowerblue"><b>@urn2.HAYVANYAS @HayvanSahiplendirmeSitesi.Resources.HomeText.Yaş</b></h4>
                                <br />
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6" style="text-align:center">
                                <label style="color:chartreuse">!! @HayvanSahiplendirmeSitesi.Resources.HomeText.BilgiDoldur !!</label>
                            </div>

                            @{ var sayı = 0; }
                            <div class="col-xs-12 col-sm-12 col-lg-12" style="text-align:center">
                                <hr />
                                @foreach (var uye in Model.Alıcı)
                                {
                                    if (uye.KULLANICIIP == Request.UserHostAddress)
                                    {
                                        using (Html.BeginForm("SahiplenmeGuncelle", "Musteri", FormMethod.Post))
                                        {
                                            <div class="form-group">
                                                <input type="text" value="@uye.KULLANICIID" style="display:none;" name="KULLANICIID" />
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkblue">@HayvanSahiplendirmeSitesi.Resources.HomeText.Eposta</label>
                                                    <br />
                                                    <input type="text" value="@uye.KULLANICIEPOSTA" required="" readonly="" name="KULLANICIEPOSTA">
                                                </div>
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkcyan">@HayvanSahiplendirmeSitesi.Resources.HomeText.Ad</label>
                                                    <br />
                                                    <input type="text" value="@uye.KULLANICIAD" required="" name="KULLANICIAD">
                                                </div>
                                                <p>&emsp;</p>
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkgoldenrod">@HayvanSahiplendirmeSitesi.Resources.HomeText.Soyad</label>
                                                    <br />
                                                    <input type="text" value="@uye.KULLANICISOYAD" required="" name="KULLANICISOYAD">
                                                </div>
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkgreen">@HayvanSahiplendirmeSitesi.Resources.HomeText.Tel</label>
                                                    <br />
                                                    <input type="text" value="@uye.KULLANICITEL" required="" name="KULLANICITEL">
                                                </div>
                                                <p>&emsp;</p>
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkkhaki">@HayvanSahiplendirmeSitesi.Resources.HomeText.Adres</label>
                                                    <br />
                                                    <input type="text" value="@uye.KULLANICIADRES" required="" name="KULLANICIADRES">
                                                </div>
                                                <div class="col-xs-6 col-sm-6 col-lg-6">
                                                    <label style="color:darkmagenta">@HayvanSahiplendirmeSitesi.Resources.HomeText.SahiplenilenHayvan</label>
                                                    <input type="text" value="@urn2.HAYVANAD" required="" readonly="">
                                                    <textarea id="multiliner" style="display:none;" name="KULLANICIALIM">
Sahiplenilmek İstenen Hayvanın Adı : @urn2.HAYVANAD 
Hayvanın ID : @urn2.HAYVANID
Hayvanın Kategorisi : @urn2.HAYVANKATEGORI
Hayvanın Cinsi ve Cisiyeti : @urn2.HAYVANCINS & @urn2.HAYVANCINSIYET
                                            </textarea>
                                                </div>
                                                <p>&emsp;</p>
                                                <div class="col-xs-12 col-sm-12 col-lg-12">
                                                    <button class="btn btn-warning">♥ @HayvanSahiplendirmeSitesi.Resources.HomeText.Sahiplen ♥</button>
                                                </div>
                                                <p>&emsp;</p>
                                            </div>
                                        }
                                        break;
                                    }
                                    else
                                    {
                                        sayı++;
                                    }
                                    if (sayı == Model.Alıcı.Count())
                                    {
                                        <div class="col-xs-12 col-sm-12 col-lg-12" style="text-align:center;">
                                            <a class="btn btn-success" href="/Guvenlik/UyeGirisYap"><b>@HayvanSahiplendirmeSitesi.Resources.HomeText.SahipGiris</b></a>
                                        </div>
                                        <p>&emsp;</p>
                                    }
                                }
                            </div>
                            @if (urn2.HAYVANIC != null)
                            {
                                <div class="col-xs-12 col-sm-12 col-lg-12" style="text-align:center;">
                                    <label>HAYVANIN BİLGİLERİ</label>
                                    <b><textarea class="form-control" rows="5" readonly style="text-align:center">@urn2.HAYVANIC</textarea></b>
                                    <br />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

