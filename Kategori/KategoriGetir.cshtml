@model  HayvanSahiplendirmeSitesi.Models.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.KATEGORIID)
        @Html.TextBoxFor(m => m.KATEGORIID, new { @class = "form-control", @readonly = true })
        <br />
        @Html.LabelFor(m => m.KATEGORIAD)
        @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "form-control", @required = "required", @maxlength = "45" })
    </div>
    <div>
        <button class="btn btn-warning">KATEGORİYİ GÜNCELLE</button>
    </div>
}


