@model HayvanSahiplendirmeSitesi.Models.Entity.TBLADMIN

@{
    ViewBag.Title = "AdminGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ADMINID)
        @Html.TextBoxFor(m => m.ADMINID, new { @class = "form-control", @readonly = true })
        <br />
        @Html.LabelFor(m => m.ADMINEPOSTA)
        @Html.TextBoxFor(m => m.ADMINEPOSTA, new { @class = "form-control", @required = "required", @maxlength = "45" })
        <br />
        @Html.LabelFor(m => m.ADMINSIFRE)
        @Html.TextBoxFor(m => m.ADMINSIFRE, new { @class = "form-control", @required = "required", @maxlength = "45" })
    </div>
    <div>
        <button class="btn btn-warning">YÖNETİCİYİ GÜNCELLE</button>
    </div>
}